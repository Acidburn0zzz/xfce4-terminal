test x"$BROWSER" = x"" && BROWSER="mozilla"

HELPDIR="@datadir@/doc/Terminal/"

if test -n "$LC_ALL"; then
  LC=$LC_ALL
elif test -n "$LANG"; then
  LC=$LANG
else
  LC="C"
fi

if test -r "$HELPDIR/$LC/Terminal.html"; then
  URL="$HELPDIR/$LC/Terminal.html"
elif test -r "$HELPDIR/`echo $LC | sed 's/\(..\)_.*/\1/'`/Terminal.html"; then
  URL="$HELPDIR/`echo $LC | sed 's/\(..\)_.*/\1/'`/'Terminal.html"
else 
  URL="$HELPDIR/C/Terminal.html"
fi

test -n "$1" && URL="$URL#$1"

case "$BROWSER" in
communicator*|netscape*|mozilla*|phoenix*|firebird*|firefox*)
	$BROWSER -remote openurl\(file://"$URL",new-window\) || \
		$BROWSER file://"$URL"
	;;
opera*)
	$BROWSER -remote openURL\(file://"$URL",new-window\) || \
		$BROWSER file://"$URL"
	;;
*)
	$BROWSER "$URL"
	;;
esac

exit $?

